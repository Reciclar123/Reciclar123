{
  "name": "Person",
  "plural": "Persons",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "cedula": {
      "type": "string"
    },
    "nombre": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string",
      "required": true,
      "index": {
      "unique": true
    }
    },
    "telefono": {
      "type": "string",
      "required": true,
      "index": {
      "unique": true
    }
    },
    "ciudad": {
      "type": "string"
    },
    "rol": {
      "type": "string",
      "required": true
    },
    "gotas": {
      "type": "number",
      "required": true,
      "default": 10
    },
    "politicas": {
      "type": "boolean",
      "required": true
    },
    "fecha": {
      "type": "date",
      "defaultFn": "now"
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    }
  ],
  "methods": {}
}
